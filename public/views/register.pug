html
  head
    include navbar.pug
    title Register
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")

  body
    main
      div(class="container")
        h1 Register
        form(action='/register' method="post")
          div(class="form-group")
              label(for="email") Register with your e-mail address
              input(type="email" name="email" placeholder="Ex : exemple@exemple.com")
          div(class="form-group")
              label(for="username") Username
              input(type="text" name="username" placeholder="Ex : Username")
          div(class="form-group")
              label(for="password") Password
              input(type="password" name="password" placeholder="Ex : password")
          div(class="form-check")
              input(class="btn btn-primary" type="submit" value="Register")
